package Inheritance;
class Animal{
    void sleep(){
        System.out.println("Animals need sleep");
    }
}
class Tiger extends Animal{

}
public class myText{
    public static void main(String[] args) {
        Tiger obj =new Tiger();
        obj.sleep();
    }
}






